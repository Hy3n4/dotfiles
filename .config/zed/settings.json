  "assistant": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-5-sonnet-20240620"
    },
    "version": "2"
  },
  "theme": "One Dark",
  "vim_mode": false,
  "ui_font_size": 12,
  "buffer_font_size": 12,
  "ui_font_family": "MesloLGS Nerd Font Mono",
  "terminal": {
    "font_family": "MesloLGS Nerd Font Mono",
    "font_size": 12,
    "line_height": "standard",
    "toolbar": {
      "title": true
    },
    "working_directory": "current_project_directory",
    "copy_on_select": true
  },
  "cursor_blink": false,
  "relative_line_numbers": false,
  "vertical_scroll_margin": 0,
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": false
  },
  "tab_bar": {
    "show": true
  },
  "tabs": {
    "file_icons": true,
    "git_status": true
  },
  "features": {
    "copilot": false
  },
  "preferred_line_length": 90,
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "languages": {
    "Go": {
      "tab_size": 2,
      "formatter": "language_server"
    },
    "Terraform": {
      "tab_size": 2,
      "formatter": "language_server"
    }
  },
  "formatter": {
    "language_server": {
      "name": "biome"
    }
  },
  "lsp": {
    "gopls": {
      "initialization_options": {
        "hints": {
          "assignVariableTypes": true,
          "compositeLiteralFields": true,
          "compositeLiteralTypes": true,
          "constantValues": true,
          "functionTypeParameters": true,
          "parameterNames": true,
          "rangeVariableTypes": true
        }
      }
    },
    "terraform-ls": {
      "initialization_options": {
        "experimentalFeatures": {
          "prefillRequiredFields": true
        }
      }
    },
    "yaml-language-server": {
      "settings": {
        "yaml": {
          "completion": true,
          "schemaStore": {
            "enable": true
          },
          "schemas": {
            "kubernetes": "**.yaml"
          }
        }
      }
    }
  },
  "git": {
    "inline_blame": {
      "enabled": false,
      "delay_ms": 500
    }
  }
}
